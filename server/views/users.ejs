<!DOCTYPE html>
<html>
<head>
    <title>FoodAdviser</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="page-header">
        <h2>Welcome to FoodAdviser!</h2>
        <h3>Users</h3>
        <a class="btn btn-primary text-right" href="/user/logout" role="button">Log Out</a>
    </div>

    <div class="panel-body">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>User Name</th>
                <th>Action</th>
            </tr> </thead>
            <tbody>
            <% for (var i = 0; i < data.length; i++) { %>
                <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= data[i].email%></td>
                    <td><%= data[i].username%></td>
                    <td><a class="btn btn-primary" href="/user/<%= data[i]._id%>" role="button">Details</a></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
